<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/cincinnati"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_hero_image_height"
        android:scaleType="centerCrop"
        android:src="@drawable/cincinnati" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/medium_padding"
        android:paddingRight="@dimen/medium_padding"
        android:paddingTop="@dimen/medium_padding"
        android:paddingBottom="@dimen/small_padding"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:paddingRight="@dimen/small_padding"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/kid"
                android:layout_width="match_parent"
                android:adjustViewBounds="true"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:tint="#66000000"
                android:src="@drawable/things_to_do_kid_playing" />

            <TextView
                android:id="@+id/things_to_do"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/textview_border"
                android:text="@string/main_category_things_to_do"
                android:padding="@dimen/base_padding"
                style="@style/MainCategoryText"
                android:gravity="center"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:paddingLeft="@dimen/small_padding"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/landmark"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:tint="#66000000"
                android:src="@drawable/treasure_map" />

            <TextView
                android:id="@+id/landmarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/textview_border"
                android:padding="@dimen/base_padding"
                android:text="@string/main_category_landmarks"
                style="@style/MainCategoryText"
                android:gravity="center"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/medium_padding"
        android:paddingRight="@dimen/medium_padding"
        android:paddingBottom="@dimen/medium_padding"
        android:paddingTop="@dimen/small_padding"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:paddingRight="@dimen/small_padding"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/food"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:tint="#66000000"
                android:src="@drawable/food_veggies" />

            <TextView
                android:id="@+id/eat_drink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/textview_border"
                android:padding="@dimen/base_padding"
                android:text="@string/main_category_eat"
                style="@style/MainCategoryText"
                android:gravity="center"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:paddingLeft="@dimen/small_padding"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/history_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:tint="#66000000"
                android:src="@drawable/history_old_map" />

            <TextView
                android:id="@+id/history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/textview_border"
                android:text="@string/main_category_city_history"
                android:padding="@dimen/base_padding"
                style="@style/MainCategoryText"
                android:gravity="center"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
