<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:openDrawer="start">

    <GridView
        android:id="@+id/subcategory_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="@dimen/subcategory_grid_columnWidth"
        android:numColumns="auto_fit"
        android:verticalSpacing="@dimen/subcategory_grid_verticalSpacing"
        android:horizontalSpacing="@dimen/subcategory_grid_HorizontalSpacing"
        android:stretchMode="columnWidth"
        android:gravity="center"
        />

    <include layout="@layout/navigation_drawer" />

</android.support.v4.widget.DrawerLayout>